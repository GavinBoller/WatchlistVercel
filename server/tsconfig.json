{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "rootDir": "..",
      "outDir": "./dist",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      }
    },
    "include": ["server/**/*.ts", "shared/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }