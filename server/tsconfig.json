{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"]
      }
    },
    "include": ["**/*.ts", "../shared/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }