{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "types/**/*.d.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "backup/**/*", "dist"]
}
